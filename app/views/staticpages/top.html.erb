<% if !current_user %>

  <div class="container">
    <div class="main center">
      <h1>Welcome to our financial analysis.</h1>
      <p>please Login/Signup now.</p>
    </div>

    <div class="center">
      <%= link_to "Log in", new_user_session_path, class:"btn btn-primary btn-login" %>
      <%= link_to "Sign up", new_user_registration_path, class:"btn btn-primary btn-signup" %>
    </div>

    <div class="forget-password center">
      <p style="font-weight: bold;">forget password?</p>
      <p>Send email to <%= link_to "reset password", "#" %>.</p>
    </div>
  </div>

<% else %>

<div class="container">
  <p>ログインしています</p>
  <div class="top-flex">
    <div class="top-flex-item">
      <%= link_to "固定費", fixed_expense_index_url %>
    </div>

    <div class="top-flex-item">
      <%= link_to "変動費" , variable_expense_index_url %>
    </div>

    <div class="top-flex-item">
      <%= link_to "投資" , "#" %>
    </div>
  </div>
</div>

<div class ="container">
  <div class="css-grid-user">
    <div class="grid-container">
      <p>Monthly Expense</p>
      <%= pie_chart({car: 2000, food: 3000}) %>
    </div>
    <div class="grid-container">
      <p>Monthly Income</p>
    </div>
  </div>

  <div class="container balance">
    <p>Balance</p>
  </div>
</div>

<% end %>